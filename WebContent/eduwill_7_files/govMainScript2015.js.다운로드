/***********************************************************************************
* 페이지를 특정위치로 이동시키는 함수
* 페이지 상단으로부터 100px 위치로 1초안에 이동함 : movePagePosition(100, 1000);
***********************************************************************************/
function movePagePosition(topPosition, delayTime){
	$('html, body').animate({scrollTop : topPosition}, delayTime);	// 특정위치로 화면스크롤 이동
}


/***********************************************************************************
* 페이지 블라인드 ON 처리
***********************************************************************************/
function pageBlindON(){
	var documentHeight = $(document).height();
	$("div[class=layer_cf_screen]").css("height", documentHeight);
	$("div[class=layer_cf_screen]").show();
}

/***********************************************************************************
* 페이지 블라인드 OFF 처리
***********************************************************************************/
function pageBlindOFF(){
	$("div[class=layer_cf_screen]").hide();
}